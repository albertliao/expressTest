@media screen and (max-width: 767px) {
	ul.promotionsBanner li.menuBanner a.menuBanner-link{
		display: block;
		width: 46%;
		margin: 0px auto;
	}
	
	ul.promotionsBanner li.menuBanner{
			height: auto;
	}
	ul.promotionsBanner li.menuBanner ul li{
			padding: 0px;
	}
	ul.promotionsBanner li.menuBanner ul li .fa{
			float: right;
	}
	ul.promotionsBanner li.menuBanner a span.dropdown-text{
		font-size: 14px;
		color: #fff;
		border: 0 solid #5e5f5e;
		padding: 10px 170px 10px 15px;
		text-align: center;
		font-weight: 700;
		text-decoration: none;
		float: left;
		background: #595959;

	}
	ul.promotionsBanner li.menuBanner .dropdown-menu{
		margin: 0px auto;
		position: relative;
		background: transparent;
		width: 278.5px;
		margin: 0 auto 0 13.15em;
		border: 0px;
	}
	ul.promotionsBanner li.menuBanner .dropdown-menu li{
		background: #595959;
		display: block;
		border-bottom: 1px solid #ddd;
		padding: 8px 0px;
	}
	ul.promotionsBanner li.menuBanner .dropdown-menu li a{
		color: #fff !important;
		padding: 12px 0px 0px 0px;
	}
	ul.promotionsBanner li.menuBanner .dropdown-menu li span{
		padding: 10px 90px 10px 10px;
	}
	ul.promotionsBanner li.menuBanner .dropdown-menu li span.fa{
		padding: 13.4px 16px;
margin: -19px 5px 5px;
position: absolute;
right: -5px;
	}
		ul.promotionsBanner li.menuBanner .dropdown-menu li a i{
		float: right;
		position: absolute;
		right: 0px;
	}
	.mobile-arrow-right{
		padding: 5px 15px;
		background: #000;
		color: #fff;
		margin: 0;
		font-size: 30px;
		
	}
	
	.animate-switch-container {
		position: relative;
		right: 0px;
		display: inline-block;
		float: left;
		width: 90%;
	}
	.mobile-arrow-right{
		display: inline-block;
	}
	.desktop-arrow{
		display: none;
	}
	.mobile-arrow{
		display: block;
	}
	.banner img {
		width: 99%;
		height: 320px;
	}
	ul.promotionsBanner li.next-banner, ul.promotionsBanner li.prev-banner{
		height: 670px;
	}
	ul.promotionsBanner li.next-banner a, ul.promotionsBanner li.prev-banner a{
		margin-top: 6.5em;
	}
}
@media screen and (max-width: 619px) {
