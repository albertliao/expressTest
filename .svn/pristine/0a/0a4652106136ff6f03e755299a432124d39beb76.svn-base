
.heading1 {
	font-size: 18px;
}
.heading2 {
	text-align:center;
}
.ulList {
	margin: 5% 25%;
}
.hero-unit{
	font-family:designk-medium;
	position: absolute;
	background: rgba(0,0,0,0.7);
	padding: 20px;
	padding-left: 3.8%;
	/*min-height: 380px;*/
	z-index: 100000;
	top:0px;
	bottom:0px;
}
.hero-unit h2{ font-family:designk-light; font-size:40px;}
.hero-unit h4{font-family:designk-medium; font-size:14px; margin-top:20px;}
.carousel-indicators{left:65% !important;}
.carousel-indicators li{margin-right:10px !important;}


.hero-unit p,.hero-unit h2, .hero-unit h4 {
	color: #fff;
}
.carousel-inner>.item>a>img, .carousel-inner>.item>img{
	width: 100%;	
}
.inventory-text{
    font-size:14px ;
    color: #fff;
    border:0px solid #5e5f5e;
    padding: 10px 50px 10px 15px;
    text-align: center;
    font-weight: bold;
    text-decoration: none;
    margin:10px 0;
    float: left;
    background: #bc1728;
}
.btn-arrow{
	padding: 5px 15px 5px 15px;
	background: #000;
	color: #fff;
	margin:10px 0;
	font-size: 30px;
}
.inventory:hover{
	text-decoration: none;
	color: #fff;
}
.left, .right{
	display: none;
}
.carousel-inner > .item > img, .carousel-inner > .item > a > img{
	min-height: 380px;
}

.mobile-arrow{
	display: none;
}
.menuBanner.dropdown a, .menuBanner.dropdown a:hover{
	text-decoration: none;
}

.pad-12{
	padding-left: 11px;
	padding-right: 11px;
}
.menuBanner-link{
	display: block;
	color: #c5c5c9; 
	font-size: 24px;
}

.footer-bottom .socialsiteIcons ul{
	float: right;
	margin-top: 4px;
}
.footer-bottom .socialsiteIcons ul li a{
	padding: 10px 12px;
}
@media screen and (max-width: 1023px){
	.hero-unit{
		position: relative;
		width: 100%;
		min-height: 260px;
		padding-top: 10px;
		padding-bottom: 10px;
	}
	.inventory{
		margin: 0px auto;
		display: block;
		width: 30%;
	}
	.hero-unit p{
		display: none;
	}
}
